{
  "name": "@game-store/api",
  "version": "1.0.0",
  "private": true,
  "main": "build/server.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch --clear-screen=false --env-file=.env src/server.ts",
    "build": "tsup src --out-dir build",
    "start": "node --env-file=.env build/server.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "lint": "eslint src --fix"
  },
  "dependencies": {
    "@prisma/client": "5.16.0",
    "axios": "1.7.2",
    "bcrypt": "5.1.1",
    "celebrate": "15.0.3",
    "cors": "2.8.5",
    "express": "4.19.2",
    "joi-translation-pt-br": "0.0.10",
    "jsonwebtoken": "9.0.2",
    "multer": "1.4.5-lts.1",
    "slugify": "1.6.6"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/bcrypt": "5.0.2",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "9.0.6",
    "@types/multer": "1.4.11",
    "@types/node": "20.14.9",
    "eslint": "8.57.0",
    "prisma": "5.16.0",
    "ts-node": "10.9.2",
    "tsup": "8.1.0",
    "tsx": "4.15.7",
    "typescript": "5.5.2"
  }
}
